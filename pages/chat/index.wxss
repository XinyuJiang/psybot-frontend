/* pages/mine/mine.wxss */

page {
  height: 100%;
  /* background-image: url("https://graph.baidu.com/resource/112b79e55e4847f0a2cb301563012182.jpg");*/
  background-repeat: no-repeat;
  background-size: 100%;
  -moz-background-size: 100%;
  position: fixed;
}

.page-title {
  height: 20%;
  width: 100%;
  background-color: #f2b49a;
  border-bottom-left-radius: 10px;
  border-bottom-right-radius: 10px;
  box-shadow: 0px 0px 5px 2px #d6d6d6;
  margin: 0 0 15% 0;
  position: fixed;
}

.group {
  display: flex;
  justify-content: row;
  align-items: center;
  height: 40%;
  margin-bottom: 2%;
  width: 94%;
  margin-left: 3%;
}

.chat-type-box {
  width: 45%;
  height: 95%;
  margin: auto;
  background-color: #fff;
  border-radius: 20px;
  align-items: center;
  display: flex;
  flex-direction: column;
  justify-content: center;
  box-shadow: 0px 0px 5px 2px#d6d6d6 inset;
}

.icon-image {
  height: 80px;
  width: 80px;
}

.chat-title {
  font-weight: bold;
  font-size: 18px;
  color: #414141;
}
