/* pages/mine/mine.wxss */
page{
  height: 100%;
  background-color: #ffffff; /* 标准的语法 */
  position: fixed;
}
.avatar-container-box{
  width:100%; 
  background-color: #f2b49a;
  border-bottom-left-radius: 7px;
  border-bottom-right-radius: 7px;
  box-shadow: 0px 0px 5px 2px #d6d6d6; 
}
.avatar-container{
  height: 100px;
  width: 92%;
  margin-left:4%;
  margin-right: 4%;
  display: flex;
  justify-content: row;
}
.avatar {
	width: 60px;
	height: 60px;
	border-radius: 50%;
  margin-top:20px;
  border: 1.5px solid #fff;
}

.info-group{
  display: flex;
  flex-direction: column;
  width: 60%;
}
.name{
  margin-top:30px;
  height:25px;
  margin-left: 5%;
  color:#fff;
  font-size: 18px;
  letter-spacing:1px;
  font-weight: bold;
}
.user-id{
  margin-top:3px;
  height:20px;
  margin-left: 5%;
  color:#fff;
  font-size: 10px;
  letter-spacing:1px;
}




.container1{
  width: 90%;
  text-align: center;
  margin:15px 0 10px 5%;
  border-radius: 10px;
  border: 1px solid rgba(82, 79, 75, 0.089);
  background-color: #fff;
  display: flex;
  justify-content: row;
}
.record{
  width: 30%;
  margin:auto;
  padding:5% 0 5%  0;
  text-align: center;
  background-color: #fff; /* 标准的语法 */
  color:rgb(82, 79, 75);
}




.opration-area {
  width: 90%;
  margin:15px 0 10px 5%;
  font-size: 17px;
  border: 1px solid rgba(82, 79, 75, 0.089);
  border-radius: 10px; 
}
.whole-choose{
  width: 100%;
  height: 50px;
}
.choose-group{
  height: 50px;
  width: 92%;
  margin-left:4%;
  margin-right: 4%;
  display: flex;
  justify-content: row;
  border-bottom: 0.5px solid rgba(82, 79, 75, 0.089);
}
.whole-choose:active{
  background-color: rgba(82, 79, 75, 0.089);
}
.choose{
  line-height:50px;
  font-size: 15px;
  width: 28%;
  margin-left:6px;
  color:rgb(82, 79, 75);
}
.go{
  width: 10px;
	height: 10px;
  margin: 20px 0px 0 65%;
}