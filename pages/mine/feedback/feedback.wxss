/* pages/feedback/feedback.wxss */
page{
  height: 100%;
  width: 100%;
  background: #fff;/* 标准的语法 */
}

.area {
  width: 100%;
  padding: 10px 0 0 0 ;
}
.feedback-title{
  margin: 0 0 10px 4% ;
  font-size: 18px;
  letter-spacing:1px;
  color: rgb(82, 79, 75);
}
.feedback-type-box{
  display: flex;
  justify-content: row;
  width: 100%;
  text-align: center;
  margin-bottom:20px;
}
.feedback-item{
  margin:auto;
  width: 25%;
  height:30px;
  line-height: 30px;
  font-size: 15px;
  color:  #727272;
  background-color:#f5f5f5;
  border-radius:15px; 
}
.active{
  color:  #ffffff;
  background-color:#f2b49a;
}

.feedback-content{
  background-color: #f5f5f5;
  height: 280px;
  width: 90%;
  margin-left:4%;
  padding:10px 0 0 10px;
  border-radius: 5px;
  font-size: 15px;
}
.hint{
  float: right;
  font-size: 14px;
  color: #727272;
  margin: 10px 10px 10px 0;
}
.button{
  height:40px;
  line-height: 40px;
  background-color: #f2b49a;
  color: rgba(0, 0, 0, 0.6);
	font-size: 18px;
  margin-bottom: 10px;
  width:90%;
  border-radius: 5px;
}
