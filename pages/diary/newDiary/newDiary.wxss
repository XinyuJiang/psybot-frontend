/* pages/diary/newDiary/newDiary.wxss */
page{
  height:100%;
  background-color: #ffffff; /* 标准的语法 */
}
.container1{
  width:92%;
  min-height: 100%;
  border-left: 2px solid rgba(82, 79, 75, 0.089);
  margin: 0 0 0 8%;
  padding:0;
  overflow: hidden;
  z-index: 1;
}
.title{
  font-size:35px;
  height:45px;
  font-weight: bold;
  padding:20px 0 0 0 ;
  margin:0 0 2px 6%;
}
.time{
  font-size:15px;
  margin:0 0 2px 6%;
  color: #d3d3d3;
}
.location{
  width: 10px;
  height: 25px;
  line-height: 25px;
  font-size: 14px;
  text-align: center;
  background-color: #fff;
  color: #727272;
  border: 1px solid #727272;
  border-radius: 5px; 
  margin:0px 0 10px 6%;
  display: flex;
  flex-direction: row;
}
.location image{
  width:20px;
  height:20px;
  margin: 2.5px 0 0 auto;
}

.label-box{
  width: 90%;
  height: 30px;
  margin:0 5% 0 5%;
}
.label-box2{
  display: -webkit-box;
  -webkit-overflow-scrolling: touch;
}
.single-label{
  width: 60px;
  margin-left:5px;
  height: 25px;
  line-height:25px;
  font-size: 14px;
  text-align: center;
  background-color: #fff;
  color: #545752;
  border: 0.5px solid #000;
  border-radius: 5px; 
}
.diary-label{
  width: 25%;
  height: 25px;
  line-height:25px;
  font-size: 14px;
  text-align: center;
  background-color:#f15959;
  color: #f2b49a;
  border: 1.5px solid #f2b49a;
  border-radius: 5px; 
  margin:5px 0 10px 6%;
}


.content{
  font-size: 18px;
  color: #5f5b5b;
  margin:20px 0 20px 8%;
  width:85%;
  min-height: 100px;
}
.submit-box{
  height: 45px;
  width: 85px;
  bottom: 20px;
  right: 20px;
  position: fixed;
}
.submit{
  background-color: #ffffff;
  color: #5f5b5b;
  font-size: 18px;
  border: 2px solid #5f5b5b;
  border-radius: 25px;
  height: 40px;
  line-height: 35px;
  width: 80px;
}
.submit:active{
  background-color: #969696;
}

.photo{
  width:90px;
  height: 90px;
  border-radius: 5px;
  margin:20px 0 0 10px;
  z-index: 100;
}
.add_image{
  border:1.5px dashed #969696;
  width:90px;
  height: 90px;
  border-radius: 5px;
  margin:20px 0 0 10px;
}
.add_image image{
  width:60px;
  height: 60px;
  margin:15px 0 0 15px;
  opacity: 0.8;
}
.delete{
  position:absolute;
  top:0;
  right:0;
  background:#999999; 
  height: 36rpx;
  width: 36rpx;
  text-align: center;
  font-size:22rpx;
  font-weight:700;
  z-index: 400;
  margin:20px 0 0 0;
}
.number_remind{
  font-size: 14px;
  color: #969696;
  margin:0 0 100px 80%;
}