/* pages/diary/diary.wxss */
page {
  height:100%;
  background-color: #ffffff;
}
.back-image{
  width:100%;
  height: 220px;
  background-image: url("https://graph.baidu.com/resource/112ed30e02042e0d5391c01563016019.jpg");
  background-repeat:no-repeat; 
  background-size:100% ;
  -moz-background-size:100% ;
  border: 0.5rpx solid #fff;
}
.page-title{
  text-align: center;
  font-size: 20px;
  font-weight: bold;
  height:20px;
  line-height: 10px;
  width: 30%;
  margin:80px 0 0 35%;
  border-bottom: 2px solid #414141;
  color: #414141;
}

.container1{
  min-height: 100%;
  width:92%;
  border-left: 2px solid rgba(82, 79, 75, 0.089);
  margin: 0 0 0 8%;
  padding:0;
  overflow: hidden;
}
.no_diary{
   font-size: 18px;
  color: #5f5b5b;
}
.day-container{
  /*border-left: 2px solid rgba(82, 79, 75, 0.089);*/
  border-bottom: 2px solid rgba(82, 79, 75, 0.089);
 /* margin: 0 0 0 8%;
  width:92%;*/
}
.diary-day{
   font-size: 35px;
   font-weight: bold;
   width:94%;
   padding:20px 0 0 0 ;
   margin:0 0 2px 6%;
}
.diary-other{
   font-size: 20px;
   font-weight: bold;
   width:94%;
   margin:0 0 10px 6%;
}
.diary-container{
  width: 95%;
  margin-left:5%;
 /* border: 1px solid #f70f0f; */
  display: flex;
  justify-content: row;
}
.dot{
  height:5px;
  width:5px;
  background-color: #ffffff;
  border-radius: 50%;
  border:3px solid #f2b49a; 
  margin-top: 5px; 
  margin-left: -4%;
	position: absolute;
}
.diary-box{
  width:85%;
  border-left: 1.5px solid #f2b49a; 
}
.time-label{
  display: flex;
  justify-content: row;
  margin: 3px 0 6px 3%;
}
.diary-time{
   font-size: 15px;
   font-weight: bold;
   /*border: 1px solid #dfdbdb; */
   width:85%;
}

.diary-label{
   font-size: 14px;
   height: 23px;
   line-height:23px;
   background-color: #fff; 
   width:60px;
   text-align: center;
   color:#ffffff;
   z-index:100;
   border-radius: 5px;
}
.diary-triangle{
  background: #d3d3d3;
	width: 17px;
	height: 17px;
	margin-top: 3px; 
  margin-left: 48%;
	transform: rotate(45deg);
	position: absolute;
  z-index:80;
}
.diary-content{
  font-size: 15px;
  color: #5f5b5b;
  margin:2px 0 20px 8%;
}
.diary-title{
  font-size: 15px;
  font-weight:bold;
  color: #5f5b5b;
  margin:0px 0 8px 8%;
}

.add{
  height: 60px;
  width: 60px;
  position: fixed;
  bottom:20px;
  right:20px;
  z-index: 500;
}