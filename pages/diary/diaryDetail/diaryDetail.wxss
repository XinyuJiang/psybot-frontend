/* pages/diary/diaryDetail/diaryDetail.wxss */
page{
  height:100%;
  background-color: #ffffff; /* 标准的语法 */
}
.container1{
  min-height: 100%;
  width:92%;
  border-left: 2px solid rgba(82, 79, 75, 0.089);
  margin: 0 0 0 8%;
  padding:0;
  overflow: hidden;
}
.title-label{
  width: 100%;
  display: flex;
  justify-content: row;
}
.title{
  font-size:35px;
  font-weight: bold;
  padding:20px 0 0 0 ;
  margin:0 0 2px 6%;
  width: 65%;
}
.diary-label{
  width: 24%;
  height: 23px;
  line-height:23px;
  font-size: 14px;
  font-weight: bold;
  text-align: center;
  background-color: #d3d3d3;
  color: #fff;
  margin:32px 0 0 0 ;
}
.time{
  font-size:15px;
  margin:0 0 2px 6%;
  color: #d3d3d3;
}
.content{
  font-size: 18px;
  color: #5f5b5b;
  margin:50px 0 20px 8%;
  width:85%;
}

.button-box{
  height: 54px;
  width: 100%;
  position: fixed;
  bottom: 0;
  display: flex;
  justify-content: row;
  z-index:200;
}
.button{
  background-color: #ffffff;
  text-align: center;
  color: #5f5b5b;
  font-size: 18px;
  border: 2px solid #5f5b5b;
  border-radius: 25px;
  height: 40px;
  line-height: 35px;
  width: 80px;
  z-index:200;
}