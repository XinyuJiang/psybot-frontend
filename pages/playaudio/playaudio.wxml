<!--pages/mingxiang/playaudio/playaudio.wxml-->
<view class='container'>
<image class='poster' src='{{poster}}'></image>
<text class='title' >{{title}}</text>
<text class='singer'>{{singer}}</text>
<view class='buttonblock'>
<image class='last' src='https://xinyuJiang.cn/static/img/next.png' bindtap='tolast'></image>
<image class='play' src="https://xinyuJiang.cn/static/img/{{playing?'pause.png':'play.png'}}" bindtap='playpause'></image>
<image class='next' src='https://xinyuJiang.cn/static/img/next.png'bindtap='tonext'></image>
</view>
</view>

